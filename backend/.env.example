SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_email_password_here
SMTP_FROM=Brand Name <your_email@domain.com>

# =====================
# Admin
# =====================
ADMIN_EMAIL=admin@yourdomain.com
